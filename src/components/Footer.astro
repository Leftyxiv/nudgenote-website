---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer__content">
      <div class="footer__section">
        <div class="footer__brand">
          <img src="/src/images/logo_transparent_background.png" alt="NudgeNote" class="footer__logo" />
          <h4 class="footer__title">NudgeNote</h4>
        </div>
        <p class="footer__text">
          Stay connected with the people who matter most.
        </p>
      </div>
      
      <div class="footer__section">
        <h5 class="footer__subtitle">Product</h5>
        <ul class="footer__list">
          <li><a href="/">Home</a></li>
          <li><a href="/support">Support</a></li>
          <li><a href="https://apps.apple.com/app/id1234567890">Download</a></li>
        </ul>
      </div>
      
      <div class="footer__section">
        <h5 class="footer__subtitle">Legal</h5>
        <ul class="footer__list">
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/terms">Terms of Service</a></li>
        </ul>
      </div>
      
      <div class="footer__section">
        <h5 class="footer__subtitle">Connect</h5>
        <ul class="footer__list">
          <li><a href="mailto:hello@nudgenote.app">Email</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">
        Â© {currentYear} NudgeNote. Made with care by a solo developer.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-secondary);
    padding: var(--spacing-2xl) 0 var(--spacing-xl);
    margin-top: var(--spacing-2xl);
  }
  
  .footer__content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
  }
  
  .footer__brand {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-sm);
  }
  
  .footer__logo {
    height: 28px;
    width: auto;
  }
  
  .footer__logo {
    height: 32px;
    width: auto;
  }
  
  .footer__title {
    background: var(--color-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: 1.5rem;
    margin-bottom: 0;
  }
  
  .footer__subtitle {
    color: var(--color-text);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-sm);
  }
  
  .footer__text {
    color: var(--color-text-light);
    margin-bottom: 0;
  }
  
  .footer__list {
    list-style: none;
    padding: 0;
  }
  
  .footer__list li {
    margin-bottom: var(--spacing-xs);
  }
  
  .footer__list a {
    color: var(--color-text-light);
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }
  
  .footer__list a:hover {
    color: var(--color-primary);
    opacity: 1;
  }
  
  .footer__bottom {
    padding-top: var(--spacing-lg);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  .footer__copyright {
    color: var(--color-text-light);
    font-size: 0.875rem;
    text-align: center;
    margin-bottom: 0;
  }
  
  @media (max-width: 768px) {
    .footer__content {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .footer__brand {
      justify-content: center;
      margin-bottom: var(--spacing-md);
    }
    
    .footer__logo {
      height: 28px;
    }
  }
</style>